@model BeFitApp.Models.ExerciseRequest
@{ ViewData["Title"] = "Request Exercise"; }

<h2>Request New Exercise</h2>
<p>Can't find an exercise? Ask an admin to add it.</p>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="RequestNew">
            <div class="form-group mb-3">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Reason" class="control-label"></label>
                <textarea asp-for="Reason" class="form-control" placeholder="Optional description"></textarea>
            </div>
            <button type="submit" class="btn btn-primary">Submit Request</button>
        </form>
    </div>
</div>