@model BeFitApp.Models.TrainingSession
@{ ViewData["Title"] = "New Workout"; }

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-header bg-white">
                    <h4 class="mb-0 text-primary">Start New Workout</h4>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Create">
                        <div class="mb-3">
                            <label asp-for="Name" class="form-label fw-bold"></label>
                            <input asp-for="Name" class="form-control" placeholder="e.g. Leg Day" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        
                        <div class="row mb-4">
                            <div class="col-6">
                                <label asp-for="StartDateTime" class="form-label fw-bold"></label>
                                <input asp-for="StartDateTime" class="form-control" />
                                <span asp-validation-for="StartDateTime" class="text-danger"></span>
                            </div>
                            <div class="col-6">
                                <label asp-for="EndDateTime" class="form-label fw-bold"></label>
                                <input asp-for="EndDateTime" class="form-control" />
                                <span asp-validation-for="EndDateTime" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary">Create Session</button>
                            <a asp-action="Index" class="btn btn-light border">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>