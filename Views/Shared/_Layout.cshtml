@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BeFit</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;600&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <nav class="navbar navbar-expand-lg fixed-top shadow-sm">
        <div class="container">
            <a class="navbar-brand fw-bold" asp-controller="TrainingSessions" asp-action="Index">
                <i class="bi bi-activity"></i> BeFit <span class="badge bg-warning text-dark" style="font-size: 0.5em; vertical-align: top;">BETA</span>
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarMain">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarMain">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
    <li class="nav-item">
        <a class="nav-link" asp-controller="TrainingSessions" asp-action="Index">@Localizer["Workouts"]</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" asp-controller="FoodEntries" asp-action="Index">@Localizer["Nutrition"]</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" asp-controller="Statistics" asp-action="Index">@Localizer["Analysis"]</a>
    </li>
    
    @if (User.IsInRole("Admin"))
    {
        <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">@Localizer["Admin Tools"]</a>
            <ul class="dropdown-menu border-0 shadow">
                <li><a class="dropdown-item" asp-controller="ExerciseTypes" asp-action="Create">Add New Type</a></li>
                <li><a class="dropdown-item" asp-controller="ExerciseTypes" asp-action="ManageRequests">Review Requests</a></li>
                <li><hr class="dropdown-divider"></li>
                <li><a class="dropdown-item" asp-controller="ExerciseTypes" asp-action="Index">View Master List</a></li>
                <li><a class="dropdown-item" asp-controller="Admin" asp-action="Index">Manage Users</a></li>
            </ul>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link" asp-controller="ExerciseTypes" asp-action="RequestNew">@Localizer["Request Feature"]</a>
        </li>
    }
    
    <li class="nav-item dropdown">
        <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" title="Change Language">
            <i class="bi bi-translate"></i> Language
        </a>
        <ul class="dropdown-menu dropdown-menu-end shadow">
            <li>
                <form asp-controller="Language" asp-action="SetLanguage" asp-route-returnUrl="@Context.Request.Path" method="post">
                    <input type="hidden" name="culture" value="pl" />
                    <button type="submit" class="dropdown-item">ðŸ‡µðŸ‡± Polski</button>
                </form>
            </li>
            <li>
                <form asp-controller="Language" asp-action="SetLanguage" asp-route-returnUrl="@Context.Request.Path" method="post">
                    <input type="hidden" name="culture" value="en" />
                    <button type="submit" class="dropdown-item">ðŸ‡ºðŸ‡¸ English</button>
                </form>
            </li>
        </ul>
    </li>
</ul>
                <partial name="_LoginPartial" />
            </div>
        </div>
    </nav>

    <div class="main-wrapper">
        <div class="container">
            <main role="main" class="pb-3">
                <div class="fade-in-up">
                    @RenderBody()
                </div>
            </main>
        </div>
    </div>

    <footer class="footer text-center">
        <div class="container">
            <small class="text-muted">BeFit v0.9 (Internal Build) &copy; 2025</small>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>