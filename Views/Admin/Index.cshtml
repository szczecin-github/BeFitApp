@model IEnumerable<BeFitApp.Models.AppUser>
@{ ViewData["Title"] = "User Management"; }

<div class="container mt-4">
    
    @if (TempData["Message"] != null)
    {
        <div class="alert alert-success fade-in-up">@TempData["Message"]</div>
    }

    <div class="card shadow-sm">
        <div class="card-header bg-white border-bottom">
            <h4 class="mb-0 text-primary"><i class="bi bi-people-fill"></i> User Management</h4>
        </div>
        <div class="card-body p-0">
            <table class="table table-hover mb-0">
                <thead class="table-light">
                    <tr>
                        <th class="ps-4">Email / Username</th>
                        <th>User ID</th>
                        <th class="text-end pe-4">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model)
                    {
                        <tr>
                            <td class="ps-4 fw-bold">@user.UserName</td>
                            <td class="text-muted small">@user.Id</td>
                            <td class="text-end pe-4">
                                <a asp-action="ResetPassword" asp-route-id="@user.Id" class="btn btn-sm btn-outline-danger">
                                    <i class="bi bi-key"></i> Reset Password
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>