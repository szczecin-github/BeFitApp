@model IEnumerable<BeFitApp.Models.FoodEntry>
@{ ViewData["Title"] = Localizer["Nutrition Log"]; }

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="text-primary fw-bold">@Localizer["Nutrition Log"]</h2>
    <a asp-action="Create" class="btn btn-primary shadow-sm">
        <i class="bi bi-plus-lg"></i> @Localizer["Log Meal"]
    </a>
</div>

<div class="card shadow-sm border-0">
    <div class="card-body p-0">
        <table class="table table-hover align-middle mb-0">
            <thead class="bg-light">
                <tr>
                    <th class="ps-4">@Localizer["Date"]</th>
                    <th>@Localizer["Food"]</th>
                    <th>@Localizer["Calories"]</th>
                    <th>@Localizer["Carbs"] (g)</th>
                    <th>@Localizer["Fats"] (g)</th>
                    <th>@Localizer["Sugar"] (g)</th>
                </tr>
            </thead>
            <tbody>
            @foreach (var item in Model) {
                <tr>
                    <td class="ps-4">@item.Date.ToShortDateString()</td>
                    <td class="fw-bold text-dark">@item.Name</td>
                    <td><span class="badge bg-success">@item.Calories kcal</span></td>
                    <td>@item.Carbs</td>
                    <td>@item.Fats</td>
                    <td>@item.Sugar</td>
                </tr>
            }
            </tbody>
        </table>
    </div>
</div>